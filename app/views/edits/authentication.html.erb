
<p><%= @msg %></p>
<table>
    <%= form_tag(controller: "edits" , action: "authentication") do %>
    <tr>
        <th>Find</th>
    </tr>
    <tr>
        <td><%= text_field_tag("find") %></td>
    </tr>
    <tr>
        <td><%= submit_tag("Click") %></td>
    </tr>
    <% end %>
</table>

<hr>

<table>
    <% if @users.blank? then%>
    <% else %>
        <tr>
            <th>Mail</th><th>Id</th><th>Level</th><th></th><th></th>
        </tr>
        <%= @users.each do |obj| %>
        <tr>
            <td><%= obj.email %></td>
            <td><%= obj.id %></td>
            <td><%= obj.level %></td>
            
            <% if obj.level == 0 then %>
                <td>x</td>
            <% else %>
                <td><%= link_to "-" ,edits_update_path( {:user_id => obj.id, :level => obj.level - 1} ) %></td>
            <% end %>
            
            <td><%= link_to "+" ,edits_aupdate_path( {:user_id => obj.id, :level => obj.level + 1} ) %></td>
        </tr>
        <% end %>
    <% end %>
</table>